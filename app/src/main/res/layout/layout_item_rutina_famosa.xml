<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textview_nombre_rutina_famosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la Rutina Famosa"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/pomodoro_text_dark"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textview_categoria_rutina_famosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoría: Ejemplo"
            android:textSize="14sp"
            android:textColor="@color/pomodoro_text_medium"
            android:textStyle="italic"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textview_descripcion_rutina_famosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breve descripción de la rutina y sus beneficios o enfoque principal."
            android:textSize="14sp"
            android:textColor="@color/pomodoro_text_dark"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/textview_actividades_rutina_famosa_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actividades Sugeridas:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/pomodoro_text_dark"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/textview_actividades_rutina_famosa_lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Actividad 1\n- Actividad 2\n- Actividad 3"
            android:textSize="14sp"
            android:textColor="@color/pomodoro_text_medium"
            android:lineSpacingExtra="4dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>