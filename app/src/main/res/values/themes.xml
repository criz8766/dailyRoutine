<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.DailyRoutine" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Mytheme" parent="Theme.Material3.DayNight"> <item name="android:statusBarColor">@color/rojo</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="colorPrimary">@color/rojo</item>
        <item name="colorSecondary">@color/verde</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/pomodoro_text_dark</item>
        <item name="android:textColorHint">@color/pomodoro_text_light</item>
    </style>
    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/rojo</item>
        <item name="titleTextStyle">@style/ActionBar.TitleText</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.DailyRoutine" parent="Base.Theme.DailyRoutine" />

    <style name="CampoEntradaLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="LabelCampoEntrada">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="InputCampoEntrada">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#E0E0E0</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>